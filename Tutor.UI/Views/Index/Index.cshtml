@model Tutor.UI.ViewModels.IndexVM
@using Model;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Lauout.cshtml";
}
<link href="~/Css/index.css" rel="stylesheet"/>
<link href="~/Css/font-awesome.min.css" rel="stylesheet" />
<script src="~/scripts/jquery-3.3.1.js"></script>

<div class="firstdiv">
    <div class="selectdiv">
        <ul>
            <li>
                <div class="choose" id="choosegrade">
                    <span>选择年级</span>
                    <span class="fa fa-sort-desc fa-2x triangle"></span>
                    <ul>
                        @foreach (var item in Model.grade)
                        {
                                <li><span>@item.Grade1</span></li>
                        }
                    </ul>
                </div>
            </li>
            <li>
                <div class="choose" id="choosesub">
                    <span>选择学科</span>
                    <span class="fa fa-sort-desc fa-2x triangle"></span>
                    <ul>
                        @*@foreach(var item in Model.subject)
                        {
                                <li><span>@item.subject1</span></li>
                        }*@
                    </ul>
                </div>
            </li>
        </ul>
    </div>
    <div class="logindiv">
        <div>
            <div class="choosebar">
                <span>教员登录</span>
                <span>学员登录</span>
            </div>
            <div class="inputbox">
                <div class="teacherbox">
                    @using (Html.BeginForm("teacherlogin", "Index", FormMethod.Post))
                    {
                        <ul>
                            <li>
                                <label>用户名</label>
                                @*@Html.TextBoxFor(Teacher =>Teacher.Tuser_name, new { placeholder = "请输入教员账号" ,@class="pad",type="text"})*@
                                <input class="pad" type="text" placeholder="请输入教员账号" />
                            </li>
                            <li>
                                <label>密 &nbsp; 码</label>
                                <input class="pad" type="password" placeholder="请输入密码" />
                            </li>
                            <li>
                                <input type="checkbox" />记住我的登录状态
                            </li>
                            <li>
                                <input type="submit" value="登录" />
                            </li>
                        </ul>
                    }
                </div>
                <div class="studentbox" style="display:none;">
                    <form>
                        <ul>
                            <li>
                                <label>用户名</label>
                                <input class="pad" type="text" placeholder="请输入学员账号" />
                            </li>
                            <li>
                                <label>密 &nbsp; 码</label>
                                <input class="pad" type="password" placeholder="请输入密码" />
                            </li>
                            <li>
                                <input type="checkbox" />记住我的登录状态
                            </li>
                            <li>
                                <input type="submit" value="登录" />
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
            <div class="regbox">
                <a href="#">学员注册</a>
                <a href="#">教员注册</a>
            </div>
        </div>
    </div>
</div>
<div style="width:81%;margin:0 auto;background-color:beige;">
    <div>
        <div>
            <div title=""><h2>教员推荐</h2></div>
            <div class="nextpage">
                <span>
                    <span>1</span>/<span>8</span>
                </span>
                <a href="#">上一个</a>
                <a href="#">下一个</a>
            </div>
            <ul>
                <li>
                    <div>

                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div>

    </div>
</div>
<div class="task">
    @foreach(var item in Model.task)
    {
        <div class="singlecase">
            <div class="Ttop">
                <div>@item.Student.Suser_name +"急需家教"</div>
                <div>"辅导" + @item.Subject</div>
                <div>
                    <strong>面议</strong>
                </div>
            </div>
            <div class="Tbottom">
                <span class="fa fa-location-arrow"></span>
                <span>@item.Location</span>
                <div>等待您来应聘</div>
                <a href="#">我要应聘</a>
            </div>
        </div>
    }
</div>
<script>
    //choosegrade
    $("#choosegrade").hover(function () {
        $("#choosegrade>ul").css({"display":"block","background-color":"white","z-index":"100","cursor":"pointer"});
    }).mouseleave(function () {
        $("#choosegrade>ul").css("display", "none");
    });

    //loginbox
    $(".choosebar span:nth-child(1)").hover(function () {
        $(".teacherbox").css("display", "block");
        $(".studentbox").css("display", "none");
        $(".choosebar span:nth-child(1)").css("border", "none");
        $(".choosebar span:nth-child(2)").css({ "border-bottom": "1px solid lightgray", "border-left": "1px solid lightgray" });
    });
    $(".choosebar span:nth-child(2)").hover(function () {
        $(".studentbox").css("display", "block");
        $(".teacherbox").css("display", "none");
        $(".choosebar span:nth-child(2)").css("border", "none");
        $(".choosebar span:nth-child(1)").css({"border-bottom":"1px solid lightgray","border-right":"1px solid lightgray"})
    })
</script>