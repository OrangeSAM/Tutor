@model Tutor.UI.ViewModels.IndexVM
@using Model;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Lauout.cshtml";
}
<link href="~/Css/index.css" rel="stylesheet"/>
<link href="~/Css/font-awesome.min.css" rel="stylesheet" />
<script src="~/scripts/jquery-3.3.1.js"></script>

<div class="firstdiv">
    <div class="selectdiv">
        <ul>
            <li>
                <div class="choose" id="choosegrade">
                    <span>选择年级</span>
                    <span class="fa fa-sort-desc fa-2x triangle"></span>
                    <ul>
                        <li>学前教育</li>
                        @*@foreach (var item in Model.grade)
                            {
                                <li><span>@item.Grade1</span></li>
                            }*@
                    </ul>
                </div>
            </li>
            <li>
                <div class="choose" id="choosesub">
                    <span>选择学科</span>
                    <span class="fa fa-sort-desc fa-2x triangle"></span>
                    <ul>
                        <li>小学语文</li>
                        @*@foreach(var item in Model.subject)
                            {
                                <li><span>@item.subject</span></li>
                            }*@
                    </ul>
                </div>
            </li>
        </ul>
    </div>
    <div class="logindiv">
        <div>
            <div class="choosebar">
                <span>学员登录</span>
                <span>教员登录</span>
            </div>
            <div class="inputbox">
