                    <form>
                        <ul>
                            <li>
                                <label>用户名</label>
                                <input class="pad" type="text" placeholder="请输入用户名" />
                            </li>
                            <li>
                                <label>密 &nbsp; 码</label>
                                <input class="pad" type="password" placeholder="请输入密码" />
                            </li>
                            <li style="display:none;">
                                <a href="#">忘记密码</a>
                            </li>
                            <li>
                                <input type="checkbox" />记住我的登录状态
                            </li>
                            <li>
                                <input type="submit" value="登录" />
                            </li>
                        </ul>
                    </form>
                </div>
                <div class="studentbox" style="display:none;">
                    <form>
                        <ul>
                            <li>
                                <label>用户名</label>
                                <input type="text" placeholder="请输入用户名" />
                            </li>
                            <li>
                                <label>密 &nbsp; 码</label>
                                <input type="password" placeholder="请输入密码" />
                            </li>
                            <li>
                                <a href="#">忘记密码</a>
                            </li>
                            <li>
                                <input type="checkbox" />记住我的登录状态
                            </li>
                            <li>
                                <input type="submit" value="登录" />
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
            <div>
                <a href="#">学员注册</a>
                <a href="#">教员注册</a>
            </div>
        </div>
    </div>
</div>
<div>
