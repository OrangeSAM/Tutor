</div>
<div class="task">
    @foreach(var item in Model.task)
    {
        <div class="singlecase">
            <div class="Ttop">
                <div>@item.Student.Suser_name 急需家教</div>
                <div>辅导 @item.Subject</div>
                <div>
                    <strong>面议</strong>
                </div>
            </div>
            <div class="Tbottom">
                <span class="fa fa-location-arrow"></span>
                <span>@item.Location</span>
                <div>等待您来应聘</div>
