@model Model.Tuser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Lauout.cshtml";
}
<link href="~/Css/Teauser.css" rel="stylesheet"/>
<script src="~/scripts/jquery-3.3.1.js"></script>
<div class="wrap">
    <div class="leftnav">
        <div>
            <img src="~/Img/登录注册/rg.jpg" />
            <h2>@Model.Tuser_name</h2>
        </div>
        <ul class="ulmp leftnavbar">
            <li>账户资料</li>
            <li>我的家教</li>
            <li>我的预约</li>
        </ul>
    </div>
    <div class="rightdetail">
        @*账户资料*@
        <div class="account">
            <div class="topbar">账户资料</div>
            <div>
                <div class="headpor">
                    <img src="~/Img/登录注册/rg.jpg" />
                    <ul class="ulmp">
                        <li>修改头像</li>
                        <li>上传头像</li>
                    </ul>
                </div>
                <div class="detail">
                    <ul class="ulmp">
                        <li>
                            <strong>邮&nbsp; &nbsp; &nbsp; &nbsp;箱</strong>
                            <p>@Model.Tmail</p>
                        </li>
                        <li>
                            <strong>电&nbsp; &nbsp; &nbsp; &nbsp;话</strong>
                            <p>@Model.phone</p>
                        </li>
                        <li>
                            <strong>学&nbsp; &nbsp; &nbsp; &nbsp;校</strong>
                            <p>@Model.Studyat</p>
                        </li>
                        <li>
                            <strong>专&nbsp; &nbsp; &nbsp; &nbsp;业</strong>
                            <p>@Model.Major</p>
                        </li>
                        <li>
                            <strong>科&nbsp; &nbsp; &nbsp; &nbsp;目</strong>
                            <p>@Model.Available_subject</p>
                        </li>
                        <li>
                            <strong>家教经验</strong>
                            <p>@Model.Experience</p>
                        </li>
                        <li>
                            <strong>薪水要求</strong>
                            <p>@Model.Salary</p>
                        </li>
                    </ul>
                    <ul class="ulmp">
                        <li>
                            <strong>授课区域</strong>
                            <p>@Model.Area</p>
                        </li>
                        <li>
                            <strong>可行时间</strong>
                            <p>@Model.Available_time</p>
                        </li>
                        <li>
                            <strong>获奖情况</strong>
                            <p>@Model.Award</p>
                        </li>
                        <li>
                            <strong>自我描述</strong>
                            <p>@Model.Description</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @*家教单*@
        <div class="task" style="display:none;">
            <div class="topbar">我的家教</div>
            <div>
                <table>
                    <tr class=".detailth">
                        <th>名称</th>
                        <th>科目</th>
                        <th>地点</th>
                        <th>时间</th>
                        <th>状态</th>
                        <th>电话</th>
                        <th>发布时间</th>
                    </tr>
                    <tr>
                        <td>这是名称</td>
                        <td>这是科目</td>
                        <td>这是时间</td>
                        <td>这是地点</td>
                        <td>这是状态</td>
                        <td>这是电话</td>
                        <td>发布时间</td>
                    </tr>
                </table>
            </div>
        </div>
        @*预约*@
        <div class="appiontment" style="display:none;">
            <div class="topbar">我的预约</div>
            <table>
                <tr class="detailth">
                    <th>家教单名</th>
                    <th>发布时间</th>
                    <th>状态</th>
                    <th>预约教员</th>
                </tr>
                <tr>
                    <th></th>
                </tr>
            </table>
        </div>
    </div>
</div>
<script>
    $(".leftnav>ul li").click(function (event) {
        if ($(".leftnav>ul li .libackground") == undefined) {
            $(":selected").css("background-color", "lightblue");
        }
        else {
            $(".leftnav>ul li").css("background-color", "white");
            $(event.target).css("background-color", "lightblue");
        }
    })

    $(".leftnavbar li").click(function (event) {
        if (event.target.innerText == '账户资料') {
            $(".task").css("display", "none");
            $(".appointment").css("display", "none");
            $(".account").css("display", "block");
            alert("1");
        }
        else {
            if (event.target.innerText == '我的家教') {
                $(".account").css("display", "none");
                $(".appointment").css("display", "none");
                $(".task").css("display", "block");
                alert("2");
            }
            else {
                $(".account").css("display", "none");
                $(".task").css("display", "none");
                $(".appointment").css("display", "block");
                alert("3");
            }
        }
    })
</script>